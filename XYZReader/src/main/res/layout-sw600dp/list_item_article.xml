<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/photo_placeholder">
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/thumbnail_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/thumbnail_margin"
            android:layout_marginTop="@dimen/thumbnail_margin"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/article_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingTop="@dimen/padding_text"
                android:paddingRight="@dimen/padding_text"
                android:paddingBottom="4dp"
                android:textColor="@color/cardview_dark_background"
                android:ellipsize="end"
                android:maxLines="4" />

            <TextView
                android:id="@+id/article_subtitle"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="@dimen/padding_text"
                android:paddingBottom="@dimen/padding_text"
                android:textColor="@color/cardview_dark_background"
                android:maxLines="2"
                android:ellipsize="end"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
